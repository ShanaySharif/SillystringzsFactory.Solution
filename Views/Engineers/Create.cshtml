@{
    Layout = "_Layout";
}

@model Factory.Models.Engineer

<div class="container">
    <h1>Add a New Engineer</h1>
</div>
<hr />

<div class="container">
    @using (Html.BeginForm())
    {
        <div class="form-container">
            <div class="form-group">
                <label class="form-label">@Html.DisplayNameFor(model => model.EngineerName)</label>
                @Html.TextBoxFor(model => model.EngineerName, new { @class = "form-control" })
                <p class="text-danger">@Html.ValidationMessageFor(model => model.EngineerName)</p>
            </div>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Add New Engineer</button>
        </div>
    }
</div>

<hr />

<div class="container mt-4">
    <div class="link-container">
        <p>@Html.ActionLink("Back to All Engineers", "Index", null, new { @class = "btn btn-secondary" })</p>
    </div>
</div>