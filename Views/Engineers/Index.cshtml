@{
    Layout = "_Layout";
}

@using Factory.Models;

<div class="container">
    <h1>Engineers</h1>
</div>
<hr />
<div class="container">
@if (@Model.Count == 0)
{
    <p>No engineers have been added</p>
}

<ul>
    @foreach (Engineer engineer in Model)
    {
        <li>@Html.ActionLink($"{engineer.EngineerName}", "Details", new { id = engineer.EngineerId })</li>
    }
</ul>
</div>
<hr />
<div class="link-container">
    <p>@Html.ActionLink("Add New Engineer", "Create", "Engineers")</p>
    <p>@Html.ActionLink("Return Home", "Index", "Home")</p>
</div>