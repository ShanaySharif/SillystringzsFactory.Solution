@{
    Layout = "_Layout";
}

@using Factory.Models;

<div class="container">
    <h1>Machines</h1>
</div>
<hr />

@if (Model.Count == 0)
{
    <p>No machines have been added yet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Machine Name</th>
                <th>Manufacture Date</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var machine in Model)
            {
                <tr>
                    <td>@machine.MachineName</td>
                    <td>@machine.ManufactureDate</td>
                    <td>@Html.ActionLink("Details", "Details", new { id = machine.MachineId })</td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="link-container">
    @Html.ActionLink("Add New Machine", "Create", "Machines", null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Return Home", "Index", "Home", null, new { @class = "btn btn-secondary" })
</div>